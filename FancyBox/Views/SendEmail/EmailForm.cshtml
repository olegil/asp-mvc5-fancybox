@model FancyBox.Models.SendEmailViewModel

@using (Ajax.BeginForm("SubmitEmailForm", "SendEmail", new AjaxOptions() { UpdateTargetId = "emailFormContainer" }))
{
    <div class="form-group">
        @Html.ValidationMessageFor(x => x.EmailAddress)
        @Html.LabelFor(x => x.EmailAddress, "Email Address:")
        @Html.TextBoxFor(x => x.EmailAddress)
    </div>
    <button type="submit" class="btn btn-default">Send Email</button>
}